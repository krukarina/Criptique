<ChangedButton@Button>:
    background_normal: ''
    background_color: "#9BDCC2"
    color: "#365b6d"
    font_size: "25sp"
    size_hint:(0.6,0.15)
    pos_hint: {"center_x": 0.5}
    canvas.before:
        Color:
            rgba: (0.61, 0.86, 0.76, 1)
        Rectangle:
            size: self.size
            pos: self.pos


<ChangedInput@TextInput>:
    background_normal: ''
    background_color: '#ffffff'
    color: "#365b6d"
    font_size: "18sp"
    pos_hint: {"center_x": 0.5}
    size_hint:(0.6,0.15)
    multiline: False

<RegularLabel@Label>:
    color: "#365b6d"
    font_size: "22sp"
    size_hint_y: 0.25
    height: self.texture_size[1]
    text_size: self.width, None
    valign: 'middle'
    halign: 'center'